[alias]
  amend = commit --amend -m ""
  b = branch -v -v
  ctags = !.git/hooks/ctags
  hub = !hub
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(green)%d%Creset %s %C(yellow)(%cr) %C(blue)<%an>%Creset' --abbrev-commit
  # pr and pr-clean aliases from https://gist.github.com/gnarf/5406589
  pr = !git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && :
  pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
  s = status --short --branch
  svn-diff = !git-svn-diff
  x = !gitx

  # git-codereview aliases (golang.org/x/review/git-codereview)
  change = codereview change
  gofmt = codereview gofmt
  mail = codereview mail
  pending = codereview pending
  submit = codereview submit
  sync = codereview sync

[color]
  ui = auto

[core]
  excludesfile = ~/.gitignore
  quotepath = false

[diff "vim"]
  command = vimdiff

[init]
  templatedir = ~/.git_template

[log]
  decorate = short

[pull]
  rebase = true

[push]
  default = simple

[rerere]
  enabled = 1

[user]
  name = Will Norris

# Allow pushing changes when working with a "read-only" remote from GitHub.
# Only configured for personal repos though, not any organization-owned repos.
[url "git@github.com:willnorris/"]
    pushInsteadOf = https://github.com/willnorris/
    pushInsteadOf = git://github.com/willnorris/
